template(name="planningSessionLive")
  div.navbar.navbar-default.navbar-fixed-top.bottom-nav
    div.container
      div.navbar-header
        button.navbar-toggle(type="button" data-toggle="collapse" data-target="#plan-nav")
          span.sr-only Toggle navigation
          i.glyphicon.glyphicon-user
        a.navbar-brand(href="#") #{session.name}
         +if session.goal
           i.text-muted : #{session.goal}
      #plan-nav.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li.visible-xs.visible-sm
            a(href="#") Online Users
  .container
    .row
      .hidden-xs.col-sm-4.col-md-3
        .panel(class="{{storiesClass}}")
          .panel-heading User Stories
            +if sessionOwner
              span (Driving)
          .panel-body
            .list-group
              +each stories
                +if sessionOwner
                  a.list-group-item(href="#" class="{{activeStoryClass}}")
                    +story
                else
                  .list-group-item(class="{{activeStoryClass}}")
                    +story

      .col-xs-12.col-sm-8.col-md-6
        .panel.panel-default
          .panel-heading Current User Story
          .panel-body
            +if session.selectedStory
              +with selectedStory
                h2 #{name}
                p #{description}
            else
              h2 No user story selected yet
      .hidden-xs.hidden-sm.col-md-3
        .panel.panel-default
          .panel-heading Status
          .panel-body
            .list-group
              +each users
                +memberItem member=this sessionOwner=sessionOwner
